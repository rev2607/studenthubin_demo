            <div>
                <!--foreach (VM_MockTestsList mocktest in Model.Where(m => m.Stream == stream.Stream && m.Status == "ACTIVE"))-->
                @for (int i = 0; i < 25; i++)
                {
                    <div class="courseButton">
                        @*<a class="btn btn-default btn-icon-notika waves-effect" href="#@mocktest.CourseId">@mocktest.Name (@mocktest.TotalTests)</a>*@
                        <a class="btn btn-default btn-icon-notika waves-effect" href="@Url.Action("MockTestDetails", new { id = test.CourseId })">@test.Name (@(test.TotalTests + i))</a>
                    </div>
                }
            </div>
        </div>
    }
</div>