
@{
    ViewBag.Title = "Instructors Manager";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Instructors Manager</h2>

<p>
    @Html.ActionLink("Add Instructor", "addinstructor")
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Email
        </th>
        <th>
            City
        </th>
        <th>
            Status
        </th>
        <th>
            Phone
        </th>
        <th>
            Profile Pic
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item["Name"]
            </td>
            <td>
                @item["Email"]
            </td>
            <td>
                @item["City"]
            </td>
            <td>
                @item["Status"]
            </td>
            <td>
                @item["Phone"]
            </td>
            <td>
                <img src="~/assets/img/profilepics/@item["ProfilePic"]" alt="Course Logo" style="width: 25px;" />
            </td>
            <td>
                @Html.ActionLink("Edit", "SaveInstructor", new { id = @item["ID"] }) @*|*@
                @*@Html.ActionLink("Details", "Details", new { id= @item["ID"] }) |
                    @Html.ActionLink("Delete", "Delete", new { id= @item["ID"] })*@
            </td>
        </tr>
    }

</table>
