                                                <tr>
                                                    <th style="width:35%;height:18px;">Name</th>
                                                    <th style="width:18%;height:18px;">Fees</th>
                                                    <th style="width:15%;height:18px;">Duration</th>
                                                    <th style="width:30%;height:18px;">Training Modes</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (InstitutionCourses insCourse in Model.MainCourses.OrderBy(c => c.MainCourses.Name))
