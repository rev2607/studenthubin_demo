@model System.Data.DataSet

@{
    ViewBag.Title = "Instructor Dashboard";
    Layout = "~/Views/Shared/_LayoutInstructor.cshtml";
}

<h2>Dashboard</h2>

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h4>Batches Assigned</h4>
            <table class="table">
                <tr>
                    <th>
                        Course
                    </th>
                    <th>
                        Start Date
                    </th>
                    <th>
                        Timings
                    </th>
                    <th>
                        Class Mode
                    </th>
                    <th>
                        Status
                    </th>
                    <th></th>
                    <th></th>
                </tr>

                @foreach (System.Data.DataRow item in ((System.Data.DataTable)ViewBag.InstructorBatches).Rows)
                {
                    <tr>
                        <td>
                            @item["Name"]
                            @*<img src="~/assets/img/profilepics/@item["Logo"]" alt="@item["Name"]" style="width: 50px;" />*@
                        </td>
                        <td>
                            @item["StartDate"]
                        </td>
                        <td>
                            @item["Timing"]
                        </td>
                        <td>
                            @item["ClassMode"]
                        </td>
                        <td>
                            @item["BatchStatus"]
                        </td>
                        <td>
                            <a href="/instructor/dashboard/batch/@item["ID"]">Students</a>
                        </td>
                        <td>
                            <a href="@item["ClassLink"]" target="_blank">Class</a>
                        </td>
                    </tr>
                }

            </table>
        </div>
        @if (ViewBag.BatchStudents != null)
        {
            <div class="col-md-4">
                <h4>Batch Students</h4>
                <table class="table">
                    <tr>
                        <th>
                            Student Name
                        </th>
                    </tr>

                    @foreach (System.Data.DataRow item in ((System.Data.DataTable)ViewBag.BatchStudents).Rows)
                    {
                        <tr>
                            <td>
                                @item["Name"]
                            </td>
                        </tr>
                    }

                </table>
            </div>
        }

    </div>
</div>

